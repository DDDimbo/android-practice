<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.app.pr14"
    android:versionCode="1"
    android:versionName="1.0">


    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">

        <activity android:name="ru.app.pr14.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ru.app.pr14.CrossfadeActivity"
            android:label="@string/title_crossfade"
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName="ru.app.pr14.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.app.pr14.MainActivity" />
        </activity>

        <activity android:name="ru.app.pr14.CardFlipActivity"
            android:label="@string/title_card_flip"
            android:parentActivityName="ru.app.pr14.MainActivity"
            android:theme="@style/DarkTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.app.pr14.MainActivity" />
        </activity>

        <activity android:name="ru.app.pr14.ScreenSlideActivity"
            android:label="@string/title_screen_slide"
            android:parentActivityName="ru.app.pr14.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.app.pr14.MainActivity" />
        </activity>

        <activity android:name="ru.app.pr14.ZoomActivity"
            android:label="@string/title_zoom"
            android:parentActivityName="ru.app.pr14.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.app.pr14.MainActivity" />
        </activity>

        <activity android:name="ru.app.pr14.LayoutChangesActivity"
            android:label="@string/title_layout_changes"
            android:parentActivityName="ru.app.pr14.MainActivity">>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.app.pr14.MainActivity" />
        </activity>

    </application>

</manifest>
